<h1 class="text-center font-weight-bold display-2">Proyectos</h1>
<!-- Filtro a partir de un link en una lista no ordenada utilizando un queryparams (/?s=) -->
<ul class="filters">
  <li class="border border-info rounded-pill"><a href="/?s=">Todos</a></li>
  <li class="border border-info rounded-pill"><a href="/?s=proposal">Propuesta</a></li>
  <li class="border border-info rounded-pill"><a href="/?s=in_progress">En Progreso</a></li>
  <li class="border border-info rounded-pill"><a href="/?s=finished">Terminado</a></li>
<ul>
<table class="table text-center">
  <thead>
    <tr>
      <th>Nombre Proyecto</th>
      <th>Estado</th>
      <th>Fecha Inicio</th>
      <th>Fecha Término</th>
      <th>Descripción</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project|%>
    <tr>
      <td><%= project.name_project%></td>
      <td><%= project.state%></td>
      <td><%= project.start_on%></td>
      <td><%= project.finish_on%></td>
      <td><%= project.description%></td>
    </tr>
    <% end %>
  </tbody>
</table>