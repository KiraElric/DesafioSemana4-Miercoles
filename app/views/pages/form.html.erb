<h1 class="text-center font-weight-bold display-2">Formulario</h1>
<form method="get" action="/pages/create">

  <div class="form-group">
    <label for="project_name">Nombre del Proyecto</label>
    <input type="text" class="form-control" id="project_name" name="project_name">  
  </div>

  <div class="form-group">
    <label for="description">Descripción</label>
    <input type="text" class="form-control" id="description" name="description">
  </div>

  <div class="form-group">
    <label for="start_on">Fecha inicio proyecto</label>
    <input type="date" class="form-control" id="start_on" name="start_on">
  </div>

  <div class="form-group">
    <label for="finish_on">Fecha término proyecto</label>
    <input type="date" class="form-control" id="finish_on" name="finish_on">
  </div>

  <button type="submit" class="btn btn-success">Guardar</button>
</form>
